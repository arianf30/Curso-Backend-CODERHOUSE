<div class="container-fluid" style="margin-top: 1.5rem;">
    <h1 class="text-primary"><!-- <%= titulo %> -->Productos</h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-9">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Código</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="products">
                </tbody>
            </table>
        </div>
        <div class="col-sm-3">
            <h5 class="text-primary">Envíe un nuevo producto a la BD</h5>
            <form id="form-new-product">
                <div class="form-group">
                    <label for="exampleInputEmail1">Nombre</label>
                    <input type="text" id="name-product" class="form-control" placeholder="Ingresá el nombre del producto">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Descripción</label>
                    <input type="text" id="description-product" class="form-control" placeholder="Ingresá el nombre del producto">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Precio</label>
                    <input type="number" id="price-product" class="form-control" placeholder="Ingresá el precio">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Imágen URL</label>
                    <input type="text" id="thumbnail-product" class="form-control" placeholder="Ingresá la url de la imágen">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Código</label>
                    <input type="number" id="code-product" class="form-control" placeholder="Ingresá el precio">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Stock</label>
                    <input type="number" id="stock-product" class="form-control" placeholder="Ingresá el precio">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>